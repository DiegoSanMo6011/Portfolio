---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// 1. Obtener proyectos
const allProjects = await getCollection('projects');
// 2. Ordenar por destacados y fecha
const sortedProjects = allProjects.sort((a, b) => {
  const featuredDiff = (b.data.featured === true) - (a.data.featured === true);
  if (featuredDiff !== 0) return featuredDiff;
  return b.data.date.valueOf() - a.data.date.valueOf();
});

// Definimos los badges aquí para mantener el HTML limpio
const skillBadges = ["Robotics Software", "Computer Vision", "Full Stack", "Embedded Systems"];
---

<MainLayout title="Inicio">
  
  <div class="flex flex-col items-center justify-center min-h-[45vh] text-center pt-20 mb-12">
    
    <div class="mb-6">
      <span class="px-3 py-1 text-xs font-mono font-medium tracking-wider text-green-400 uppercase bg-green-400/10 rounded-full border border-green-400/20 animate-pulse">
        Disponible para colaborar
      </span>
    </div>

    <h1 class="text-5xl md:text-7xl font-extrabold mb-4 tracking-tight text-white">
      Diego Gerardo <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600">Sánchez Moreno</span>
    </h1>

    <h2 class="text-2xl md:text-3xl font-bold text-slate-200 mb-4 tracking-tight">
      Ingeniería en Robótica y Sistemas Digitales
    </h2>

    <p class="text-lg text-slate-400 max-w-2xl mx-auto mb-6 leading-relaxed">
      Desarrollador de Software para Robótica, Percepción y Sistemas Autónomos. <br class="hidden sm:block" />
      Especializado en <strong class="text-cyan-400">ROS 2</strong>, <strong class="text-cyan-400">Visión Artificial</strong> e integración de sistemas embebidos.
    </p>

    <div class="flex flex-wrap justify-center gap-3 mb-10">
      {skillBadges.map((badge) => (
        <span class="px-4 py-1.5 text-sm font-mono font-medium text-cyan-200 bg-slate-800/50 rounded-lg border border-slate-700 hover:border-cyan-500/50 hover:bg-cyan-900/20 transition-all cursor-default select-none shadow-sm">
          {badge}
        </span>
      ))}
    </div>

    <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
      <a href="#proyectos" class="inline-flex justify-center items-center px-8 py-3.5 text-base font-bold text-white bg-gradient-to-r from-blue-600 to-cyan-600 rounded-lg hover:from-blue-500 hover:to-cyan-500 transition-all shadow-lg shadow-blue-500/20 hover:scale-[1.02]">
        Ver Proyectos
      </a>
      <a href="https://github.com/DiegoSanMo6011" target="_blank" class="inline-flex justify-center items-center px-8 py-3.5 text-base font-medium text-slate-300 bg-slate-800 border border-slate-700 rounded-lg hover:bg-slate-700 hover:text-white transition-all font-mono">
        GitHub
      </a>
    </div>

  </div>

  <section id="proyectos" class="py-10">
    <h2 class="text-3xl font-bold text-slate-100 mb-8 flex items-center gap-3">
      <span class="text-cyan-400">/</span> Proyectos Destacados
    </h2>

    {sortedProjects.length === 0 ? (
      <div class="text-center p-12 border border-dashed border-slate-800 bg-slate-800/20 rounded-xl text-slate-500">
        <p class="text-lg">Cargando proyectos o carpeta vacía...</p>
        <p class="text-sm mt-2">Verifica <code>src/content/projects/</code></p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedProjects.map((project) => (
          <ProjectCard 
            title={project.data.title}
            description={project.data.description}
            tags={project.data.tags}
            link={`/projects/${project.slug}`}
            githubLink={project.data.githubUrl}
          />
        ))}
      </div>
    )}

  </section>

</MainLayout>
