---
import MainLayout from '../layouts/MainLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<MainLayout title="Inicio">
  
  <div class="flex flex-col items-center justify-center min-h-[40vh] text-center pt-16 mb-10">
    
    <div class="mb-4">
      <span class="px-3 py-1 text-xs font-mono font-medium tracking-wider text-cyan-400 uppercase bg-cyan-400/10 rounded-full border border-cyan-400/20">
        Disponible para colaborar
      </span>
    </div>

    <h1 class="text-5xl md:text-7xl font-extrabold mb-6 tracking-tight text-white">
      Diego <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600">Sánchez</span>
    </h1>

    <p class="text-lg md:text-xl text-slate-400 max-w-2xl mb-8 leading-relaxed">
      Ingeniero en Robótica & Desarrollador Full Stack. <br />
      Especializado en <strong class="text-slate-200">ROS 2</strong>, <strong class="text-slate-200">Sistemas Embebidos</strong> y arquitecturas web modernas.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
      <a href="#proyectos" class="inline-flex justify-center items-center px-6 py-3 text-base font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-all shadow-lg shadow-blue-600/20">
        Ver Proyectos
      </a>
      <a href="https://github.com/DiegoSanMo6011" target="_blank" class="inline-flex justify-center items-center px-6 py-3 text-base font-medium text-slate-300 bg-slate-800 border border-slate-700 rounded-lg hover:bg-slate-700 hover:text-white transition-all font-mono">
        GitHub
      </a>
    </div>

  </div>

  <section id="proyectos" class="py-10">
    <h2 class="text-3xl font-bold text-slate-100 mb-8 flex items-center gap-3">
      <span class="text-cyan-400">/</span> Proyectos Destacados
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      
      <ProjectCard 
        title="Robot Autónomo ROS 2"
        description="Sistema de navegación autónoma implementado en Raspberry Pi 4 utilizando ROS 2 Humble y SLAM para mapeo en tiempo real."
        tags={['ROS 2', 'Python', 'C++', 'Raspberry Pi']}
        githubLink="https://github.com/DiegoSanMo6011"
      />

      <ProjectCard 
        title="Portfolio Astro"
        description="Sitio web personal de alto rendimiento construido con Astro, React y Tailwind CSS. Optimizado para SEO y velocidad."
        tags={['Astro', 'React', 'Tailwind', 'TypeScript']}
        githubLink="https://github.com/DiegoSanMo6011/Portfolio"
        link="https://github.com/DiegoSanMo6011/Portfolio"
      />

      <ProjectCard 
        title="Controlador FPGA"
        description="Implementación de un controlador PID en VHDL sobre una FPGA Cyclone IV para control de motores DC de precisión."
        tags={['VHDL', 'FPGA', 'Verilog', 'Hardware']}
      />

    </div>
  </section>

</MainLayout>