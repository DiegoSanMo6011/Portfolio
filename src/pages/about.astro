---
import MainLayout from '../layouts/MainLayout.astro';

// DATOS: Tu Trayectoria (Experiencia y Educación)
const timeline = [
  {
    year: "2026 (Junio)",
    title: "Graduación — 8º semestre",
    place: "Tecnológico de Monterrey, Campus Querétaro",
    description: "Cierre de la carrera en tiempo (8 semestres, sin retrasos)."
  },
  {
    year: "2026",
    title: "Sistemas en producción para negocios locales",
    place: "Patio Cinco + Barbacoa de Miranda (Querétaro)",
    description: "Diseño e implementación de plataformas operativas con facturación, POS y operación offline, orientadas a usuarios reales."
  },
  {
    year: "2025",
    title: "Investigación en robótica suave",
    place: "Hybrid Soft Robotics Lab, Tec de Monterrey Qro.",
    description: "Infraestructura de control, telemetría y experimentación para locomoción en robots neumáticos; base del sistema actual."
  },
  {
    year: "2025",
    title: "Robótica móvil con ROS 2",
    place: "Implementación de Robótica Inteligente (Gpo 502)",
    description: "micro‑ROS, encoders y visión por computadora para conducción autónoma en robot diferencial."
  },
  {
    year: "2024",
    title: "Primera iteración en robótica suave y ponencia",
    place: "Hybrid Soft Robotics Lab, Tec de Monterrey Qro.",
    description: "Inicio de la infraestructura de locomoción y primera presentación pública del trabajo."
  },
  {
    year: "2023",
    title: "Servicio becario — City Skylines Modding",
    place: "Tec de Monterrey (extracurricular)",
    description: "Desarrollo de MODs educativos y mapa temático; trabajo fuera del plan de estudios."
  },
  {
    year: "2022 (Inicio)",
    title: "Ingeniería en Robótica y Sistemas Digitales",
    place: "Tecnológico de Monterrey, Campus Querétaro",
    description: "Énfasis en control, sistemas embebidos, visión artificial y análisis con MATLAB."
  }
];

// DATOS: Tu Tech Stack (Lenguajes que dominas)
const skills = [
  { category: "Lenguajes", items: ["C++", "Python", "TypeScript", "VHDL", "MATLAB"] },
  { category: "Robótica & Control", items: ["ROS 2 (Humble)", "micro‑ROS", "PID/PI", "Odometría", "Gazebo"] },
  { category: "Percepción", items: ["OpenCV", "YOLOv8", "Visión por computadora"] },
  { category: "Web & Producto", items: ["Astro", "Tailwind", "Wix + Velo", "Supabase", "PostgreSQL"] },
  { category: "Hardware", items: ["ESP32", "Jetson Nano", "Raspberry Pi", "Arduino", "FPGA Cyclone"] },
];
---

<MainLayout title="Sobre Mí">
  <div class="max-w-4xl mx-auto">

    <section class="mb-16 flex flex-col md:flex-row gap-10 items-center">
      <div class="flex-1">
        <h1 class="text-4xl font-extrabold text-white mb-6">
          Más que código, <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">
            construyo sistemas.
          </span>
        </h1>
        <p class="text-slate-400 text-lg leading-relaxed mb-6">
          Soy <strong>Diego Sánchez</strong>, ingeniero en formación con enfoque en robótica, control y sistemas embebidos. 
          Trabajo en la frontera entre hardware y software para construir sistemas confiables, medibles y escalables.
        </p>
        <p class="text-slate-400 text-lg leading-relaxed">
          Mi siguiente objetivo es cursar una maestría en Sistemas Autónomos y profundizar en control avanzado, percepción y robótica aplicada.
        </p>
      </div>
      
      <div class="w-48 h-48 md:w-64 md:h-64 flex-shrink-0 relative">
        <div class="absolute inset-0 bg-gradient-to-tr from-cyan-500 to-blue-600 rounded-2xl rotate-6 opacity-50 blur-lg"></div>
        <img 
          src="https://ui-avatars.com/api/?name=Diego+Sanchez&background=0D8ABC&color=fff&size=256" 
          alt="Diego Sánchez" 
          class="relative w-full h-full object-cover rounded-2xl border-2 border-slate-700 shadow-2xl"
        />
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
        <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m7-7l-7 7 7 7" /></svg>
        Áreas de investigación e interés
      </h2>
      <div class="grid md:grid-cols-2 gap-4">
        {[
          'Control avanzado para sistemas neumáticos y robots blandos',
          'Percepción y visión por computadora aplicada a robótica móvil',
          'Sistemas embebidos con telemetría y seguridad funcional',
          'Integración de software para experimentación reproducible',
        ].map((item) => (
          <div class="rounded-xl border border-slate-700/60 bg-slate-800/40 px-4 py-3 text-sm text-slate-200">
            {item}
          </div>
        ))}
      </div>
    </section>

    <div class="grid md:grid-cols-2 gap-12">
      
      <div>
        <h2 class="text-2xl font-bold text-white mb-8 flex items-center gap-2">
          <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          Trayectoria
        </h2>

        <div class="relative border-l border-slate-700 ml-3 space-y-10 pb-10">
          {timeline.map((item) => (
            <div class="relative pl-8">
              <span class="absolute -left-[5px] top-2 h-2.5 w-2.5 rounded-full bg-cyan-500 ring-4 ring-slate-900"></span>
              
              <span class="text-xs font-mono text-cyan-400 mb-1 block">{item.year}</span>
              <h3 class="text-lg font-bold text-slate-200">{item.title}</h3>
              <span class="text-sm font-medium text-slate-500 block mb-2">{item.place}</span>
              <p class="text-slate-400 text-sm leading-relaxed">
                {item.description}
              </p>
            </div>
          ))}
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-bold text-white mb-8 flex items-center gap-2">
          <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>
          Stack Tecnológico
        </h2>

        <div class="space-y-6">
          {skills.map((group) => (
            <div class="bg-slate-800/40 p-5 rounded-xl border border-slate-700/50">
              <h3 class="text-sm font-bold text-slate-300 mb-3 uppercase tracking-wider">{group.category}</h3>
              <div class="flex flex-wrap gap-2">
                {group.items.map((tech) => (
                  <span class="px-3 py-1 text-xs font-medium text-cyan-100 bg-cyan-900/30 rounded border border-cyan-500/20">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>
</MainLayout>
