---
// src/pages/projects/[slug].astro
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

// 1. Generar las rutas estáticas para cada proyecto
export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// 2. Obtener los datos del proyecto actual
const { entry } = Astro.props;
const { Content } = await entry.render();

const toEmbedUrl = (url) =>
  url
    ? url.includes('youtu.be/')
      ? url.replace('youtu.be/', 'www.youtube.com/embed/')
      : url.replace('watch?v=', 'embed/')
    : null;

const embedUrl = toEmbedUrl(entry.data.videoUrl);
const embedUrl2 = toEmbedUrl(entry.data.videoUrl2);
const siteUrl = entry.data.siteUrl;
---

<MainLayout title={entry.data.title}>
  <div class="max-w-4xl mx-auto">
    
    <header class="mb-10 text-center">
      <div class="mb-4">
        <a href="/" class="text-cyan-400 hover:text-cyan-300 font-mono text-sm flex items-center justify-center gap-2 transition-colors">
          ← Volver al inicio
        </a>
      </div>
      {(embedUrl || embedUrl2) && (
        <div class="mb-8 grid gap-6">
          {embedUrl && (
            <div>
              <div class="relative w-full max-w-3xl mx-auto overflow-hidden rounded-2xl border border-slate-700/70 shadow-2xl shadow-cyan-500/10">
                <div class="pt-[56.25%]"></div>
                <iframe
                  class="absolute inset-0 w-full h-full"
                  src={embedUrl}
                  title={`Video del proyecto ${entry.data.title}`}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
              <p class="mt-3 text-xs text-slate-400 font-mono text-center">
                Video principal del robot en movimiento
              </p>
            </div>
          )}
          {embedUrl2 && (
            <div>
              <div class="relative w-full max-w-3xl mx-auto overflow-hidden rounded-2xl border border-slate-700/70 shadow-2xl shadow-cyan-500/10">
                <div class="pt-[56.25%]"></div>
                <iframe
                  class="absolute inset-0 w-full h-full"
                  src={embedUrl2}
                  title={`Primera iteración del proyecto ${entry.data.title}`}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
              <p class="mt-3 text-xs text-slate-400 font-mono text-center">
                Primera iteración del proyecto
              </p>
            </div>
          )}
        </div>
      )}
      <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4 tracking-tight">
        {entry.data.title}
      </h1>
      {entry.data.status && (
        <div class="mb-6 flex justify-center">
          <span class="px-3 py-1 text-xs font-mono font-medium tracking-wider text-cyan-200 uppercase bg-cyan-900/30 rounded-full border border-cyan-500/30">
            {entry.data.status}
          </span>
        </div>
      )}
      {siteUrl && (
        <div class="mb-6 flex justify-center">
          <a
            href={siteUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-cyan-500 text-slate-900 font-bold text-sm uppercase tracking-wide shadow-lg shadow-cyan-500/20 hover:bg-cyan-400 transition"
          >
            Ver sitio público
          </a>
        </div>
      )}
      
      <div class="flex flex-wrap justify-center gap-2 mb-6">
        {entry.data.tags.map((tag) => (
          <span class="px-3 py-1 text-sm font-mono text-cyan-300 bg-cyan-900/30 rounded-full border border-cyan-500/30">
            {tag}
          </span>
        ))}
      </div>
      {entry.data.highlights && entry.data.highlights.length > 0 && (
        <div class="mb-10 grid gap-3 md:grid-cols-2">
          {entry.data.highlights.map((item) => (
            <div class="rounded-xl border border-slate-700/60 bg-slate-800/40 px-4 py-3 text-sm text-slate-200 text-left">
              {item}
            </div>
          ))}
        </div>
      )}

      <div class="flex justify-center gap-4">
        {entry.data.githubUrl && (
          <a href={entry.data.githubUrl} target="_blank" class="flex items-center gap-2 px-4 py-2 bg-slate-800 text-white rounded hover:bg-slate-700 transition border border-slate-700">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
            Ver Repositorio
          </a>
        )}
        {entry.data.pdfUrl && (
          <a href={entry.data.pdfUrl} target="_blank" class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition shadow-lg shadow-blue-900/20">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
            Descargar Reporte/Paper
          </a>
        )}
      </div>
    </header>

    <article class="prose prose-invert prose-lg max-w-none 
      prose-headings:text-cyan-100 prose-headings:font-bold 
      prose-p:text-slate-300 prose-p:leading-relaxed 
      prose-strong:text-white prose-li:text-slate-300
      prose-blockquote:border-l-4 prose-blockquote:border-cyan-500 prose-blockquote:bg-slate-800/50 prose-blockquote:px-4 prose-blockquote:py-1
      prose-a:no-underline prose-a:font-semibold prose-a:text-cyan-200 prose-a:bg-slate-800/60 prose-a:px-3 prose-a:py-1 prose-a:rounded-md prose-a:border prose-a:border-slate-700 hover:prose-a:text-white hover:prose-a:border-cyan-400">
      
      <Content />
      
    </article>

  </div>
</MainLayout>
