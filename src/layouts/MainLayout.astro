---
// --- ZONA DE SERVIDOR (Server Side) ---
// Aquí definimos las "Props" (propiedades) que este layout aceptará.
// TypeScript nos ayuda a asegurar que siempre pasemos un título.

//Importamos barra de navegacion y footer
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio de Ingeniería Robótica" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Diego Sánchez</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-900 text-slate-50 font-sans antialiased selection:bg-cyan-500/30 selection:text-cyan-200 flex flex-col min-h-screen">
		
		<Navbar />

		<main class="flex-grow w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-12">
			<slot />
		</main>

		<Footer />

	</body>
</html>

<style is:global>
  /* Forzamos la fuente mono solo para bloques de código */
  code, pre {
    font-family: 'JetBrains Mono', monospace;
  }
</style>