---
// --- ZONA DE SERVIDOR (Server Side) ---
// Aquí definimos las "Props" (propiedades) que este layout aceptará.
// TypeScript nos ayuda a asegurar que siempre pasemos un título.
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio de Ingeniería Robótica & Full Stack" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">

    <meta name="generator" content={Astro.generator} />
    <title>{title} | Robotics Engineer</title>
  </head>
  
  <body class="bg-slate-900 text-slate-50 font-sans min-h-screen flex flex-col">
    
    <main class="flex-grow w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      
      <slot />
      
    </main>

    <footer class="text-center py-8 text-slate-600 text-sm font-mono border-t border-slate-800 mt-auto">
      <p>Diseñado & Desarrollado en Astro</p>
      <p class="mt-2 text-xs opacity-50">© {new Date().getFullYear()} - Ingeniería y Desarrollo</p>
    </footer>

  </body>
</html>

<style is:global>
  /* Forzamos la fuente mono solo para bloques de código */
  code, pre {
    font-family: 'JetBrains Mono', monospace;
  }
</style>