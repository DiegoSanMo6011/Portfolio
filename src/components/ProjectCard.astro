---
// src/components/ProjectCard.astro

interface Props {
  title: string;
  description: string;
  tags: string[];
  link?: string;      // El ? significa que es opcional
  githubLink?: string;
  status?: string;
  featured?: boolean;
}

const { title, description, tags, link, githubLink, status, featured } = Astro.props;
---

<article class="bg-slate-800/50 rounded-xl overflow-hidden border border-slate-700 hover:border-cyan-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-cyan-500/10 group">
  
  <div class="p-6">
    
    <div class="flex justify-between items-start mb-4">
      <div class="space-y-2">
        {featured && (
          <span class="inline-flex items-center px-2.5 py-1 text-[10px] uppercase font-bold tracking-wider text-slate-900 bg-cyan-400 rounded-full shadow-lg shadow-cyan-500/20">
            Destacado
          </span>
        )}
        {status && (
          <span class="inline-flex items-center px-2.5 py-1 text-[10px] uppercase font-bold tracking-wider text-cyan-200 bg-cyan-900/40 border border-cyan-500/30 rounded-full">
            {status}
          </span>
        )}
        <h3 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
          {title}
        </h3>
      </div>
      
      {link && (
        <a href={link} target="_blank" class="text-slate-500 hover:text-cyan-400 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
        </a>
      )}
    </div>

    <p class="text-slate-400 text-sm leading-relaxed mb-6">
      {description}
    </p>

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mt-auto">
      
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="px-2 py-1 text-xs font-mono font-medium text-cyan-300 bg-cyan-900/30 rounded border border-cyan-500/20">
            {tag}
          </span>
        ))}
      </div>

      {githubLink && (
        <a href={githubLink} target="_blank" class="text-sm font-medium text-slate-300 hover:text-white flex items-center gap-2 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
          Code
        </a>
      )}
    </div>
  </div>
</article>
